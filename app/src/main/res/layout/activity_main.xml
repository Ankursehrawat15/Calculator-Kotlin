<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow>

            <TextView

                android:id="@+id/AC"
                style="@style/number"
                android:text="AC" />

            <TextView
                android:id="@+id/signChange"
                style="@style/number"
                android:text="+/-" />

            <TextView
                style="@style/number"
                android:id="@+id/modulo"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="%" />

            <TextView
                style="@style/number"
                android:id="@+id/divide"
                android:background="#FF4C29"
                android:text="/"


                />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/seven"
                style="@style/number"
                android:text="7" />

            <TextView
                android:id="@+id/eight"
                style="@style/number"
                android:text="8" />

            <TextView
                android:id="@+id/nine"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="9" />

            <TextView
                android:id="@+id/multi"
                style="@style/number"
                android:background="#FF4C29"
                android:text="x"


                />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/four"
                style="@style/number"
                android:text="4" />

            <TextView
                android:id="@+id/five"
                style="@style/number"
                android:text="5" />

            <TextView
                style="@style/number"
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="6" />

            <TextView
                android:id="@+id/sub"
                style="@style/number"
                android:background="#FF4C29"
                android:text="-" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/one"
                style="@style/number"
                android:text="1" />

            <TextView
                android:id="@+id/two"
                style="@style/number"
                android:text="2" />

            <TextView
                android:id="@+id/three"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="3" />

            <TextView
                android:id="@+id/addition"
                style="@style/number"
                android:background="#FF4C29"
                android:text="+"


                />


        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/backspace"
                style="@style/number"
                android:scaleType="center"
                android:src="@drawable/backspace_icon" />

            <TextView
                android:id="@+id/zero"
                style="@style/number"
                android:text="0" />

            <TextView
                android:id="@+id/decimal"
                style="@style/number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="." />

            <TextView
                android:id="@+id/equals"
                style="@style/number"
                android:background="#FF4C29"
                android:text="="


                />


        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/realTimeCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100 X 10" />

    <TextView
        android:id="@+id/result"
        android:textColorHint="#787A91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        tools:text="1000"
        android:textColor="@color/white"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/realTimeCal"

        />

</androidx.constraintlayout.widget.ConstraintLayout>